[user]
	name = mingang.he
	email = dustgle@gmail.com
[core]
	editor = nvim
	quotepath = false
[merge]
	tool = vimdiff
	conflictStyle = diff3
[push]
	default = simple
[init]
	templateDir = ~/.git_template
	defaultBranch = main
[alias]
	co = checkout
	ci = commit
	st = status
[credential]
	helper = store
[pull]
	rebase = false
; https://mergiraf.org/usage.html
[merge "mergiraf"]
	name = mergiraf
	driver = mergiraf merge --git %O %A %B -s %S -x %X -y %Y -p %P -l %L
